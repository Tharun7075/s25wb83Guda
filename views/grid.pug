extends layout

block content
  h1= title
  p This is the grid display page.

  p Query rows: #{query.rows}, Query cols: #{query.cols}

  - var rows = Number(query.rows)
  - var cols = Number(query.cols)

  if !Number.isInteger(rows) || !Number.isInteger(cols)
    p Error: Rows and columns must be integers.
  else if rows < 3 || rows > 13
    p Error: Rows must be between 3 and 13.
  else if cols < 3 || cols > 13
    p Error: Columns must be between 3 and 13.
  else
    table(style="border-collapse: collapse; width: 50%; text-align: center;")
      each rowIndex in Array.from({ length: rows }, (_, i) => i)
        tr
          each colIndex in Array.from({ length: cols }, (_, i) => i)
            td(style="border: 1px solid black; padding: 10px;")= rowIndex - colIndex
